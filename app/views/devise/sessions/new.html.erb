<style>
	body {background:#3498db;}
</style>
<div class="container">
<div class="row">
	<div class="col-md-4">
	</div>
	<div class="col-md-4">
		<div class="panel panel-primary portal">
		  <div class="panel-heading">
		    <h3 class="panel-title text-center"><strong><%= link_to "filtrs.co", root_path %></strong></h3>
		  </div>
		  <div class="panel-body">
		    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		    <%= devise_error_messages! %>
		 <div class="form-group">
		  	<div class="input-group">
		        <span class="input-group-addon"><i class="fa fa-user"></i></span>
				<%= f.email_field :email, :autofocus => true, :placeholder => "Email Address", :class => "form-control" %>
			</div>
		</div>
		  	<div class="form-group">
		  		<div class="input-group">
		        	<span class="input-group-addon"><i class="fa fa-lock"></i></span>
		  			<%= f.password_field :password, :placeholder => "password", :class => "form-control" %>
		  		</div>
			</div>
		  <div class="form-group">
		  <% if devise_mapping.rememberable? -%>
		 
		    	<%= f.check_box :remember_me %> <%= f.label :remember_me %>
		 
		  <% end %>
		  <div class="pull-right">
		  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
			  <%= link_to "Forgot password?", new_password_path(resource_name) %><br />
			<% end -%>
		  </div>
		  
		  </div>
		  

		  <div><%= f.submit "Sign in", :class => "btn btn-primary btn-block" %></div>
			<% end %>

			<!--<hr>
			<p class="text-center">or sign in via your social network</p>
			<div class="pull-left" style="margin-left:30px;">
				<a href="#" class="btn btn-facebook"><i class="fa fa-facebook"></i>&nbsp; Facebook</a>
			</div>
			<div class="pull-right" style="margin-right:30px;">
				<a href="#" class="btn btn-twitter"><i class="fa fa-twitter"></i>&nbsp; Twitter</a>
			</div>
			<div class="clearfix"></div>-->
			<hr>
			<p class="text-center">Don't have an account yet?<br/>
				<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Create an account", new_registration_path(resource_name) %><br />
<% end -%>
			</p>
			</div>
		</div>
	</div>
	<div class="col-md-4">
	</div>
</div>
</div>

